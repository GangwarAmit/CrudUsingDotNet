@model IEnumerable<Student_Mvc.Models.Student>


<div class="container">
    <h1>Employee List</h1>
    <p style="text-align:right;margin-right:20px;">
        <a class="btn btn-sm btn-success" asp-action="Create">Create New</a>
    <p class="text-center">
        @TempData["error"]
</p>
<br />
<div class="table-responsive tab-content table-bordered ">
@*@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.TextBox("serchtext") <input type="submit" value=" Search" />
}*@
    <input type="text" placeholder="serch here.." id="serchtext" class="form-control" />
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Roll No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class</th>
                <th>Percentage</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @*@if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3"style="color:red">
                        No Match Any Student
                    </td>
                </tr>
            }*@
            @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>@item.Roll_No</td>
                    <td>@item.First_Name</td>
                    <td>@item.Last_Name</td>
                    <td>@item.Class</td>
                    <td>@item.Percentage</td>


                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-Id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
                }

        </tbody>
    </table>
</div>

</div>
@section Scripts{ 
    <script src="/js/serc.js"></script>
}